{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "#paper/*": ["./src/*"],
      "#paper": ["./src"],
      "@vuetifyjs/v0": ["../v0/src"],
      "@vuetifyjs/v0/*": ["../v0/src/*"],
      "#v0": ["../v0/src"],
      "#v0/*": ["../v0/src/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "target": "esnext",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    {
      "path": "../v0/tsconfig.app.json"
    }
  ],
  "exclude": ["src/**/__tests__/*"]
}
