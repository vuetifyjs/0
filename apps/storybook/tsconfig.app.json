{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "#paper": [
        "../../packages/paper/src",
      ],
      "#paper/*": [
        "../../packages/paper/src/*",
      ],
      "#v0": [
        "../../packages/v0/src",
      ],
      "#v0/*": [
        "../../packages/v0/src/*",
      ],
      "@vuetify/paper": [
        "../../packages/paper/src",
      ],
      "@vuetify/paper/*": [
        "../../packages/paper/src/*",
      ],
      "@vuetify/v0": [
        "../../packages/v0/src",
      ],
      "@vuetify/v0/*": [
        "../../packages/v0/src/*",
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "target": "esnext",
  },
  "include": [
    "stories/**/*.ts",
    "stories/**/*.vue",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.vue"
  ],
}