{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "ignore": [
        "**/dist/**",
        "**/node_modules/**",
        "**/.nuxt/**",
        "**/.output/**"
      ]
    },
    "apps/docs": {
      "entry": [
        "src/components.d.ts",
        "src/composables/*.ts",
        "src/main.ts",
        "build/**/*.ts",
        "src/examples/**/*.vue"
      ],
      "project": [
        "src/**/*.{js,ts,vue,md}",
        "build/**/*.ts"
      ],
      "ignore": [
        "src/typed-router.d.ts",
        "src/layouts/*.vue",
        "src/pages/**/*.vue",
        "src/components/docs/meta/*.vue",
        "src/examples/guide/building-frameworks/my-ui/src/**/*.ts",
        "src/examples/guide/building-frameworks/my-ui/vite.config.ts",
        "src/components/app/AppBrowserIcon.vue",
        "src/components/docs/DocsBrowserSupport.vue",
        "src/skillz/tours/**/index.ts",
        "src/stores/playground.ts",
        "src/stores/skillz.ts",
        "src/data/**",
        "src/examples/**",
        "src/skillz/tutorials/**"
      ],
      "ignoreDependencies": [
        "@vue/repl"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ],
        "@vuetify/v0": [
          "../../packages/0/src"
        ],
        "@vuetify/paper": [
          "../../packages/paper/src"
        ],
        "#v0": [
          "../../packages/0/src"
        ],
        "#paper": [
          "../../packages/paper/src"
        ]
      }
    },
    "apps/storybook": {
      "entry": [
        "stories/**/*.{js,ts,vue}"
      ],
      "project": [
        "**/*.{js,ts,vue}"
      ]
    },
    "packages/0": {
      "project": [
        "src/**/*.{ts,vue}",
        "!src/**/*.test.ts",
        "!src/**/*.spec.ts"
      ],
      "ignore": [
        "src/**/*.bench.ts",
        "src/**/fixtures/**"
      ],
      "paths": {
        "#v0/*": [
          "src/*"
        ]
      }
    },
    "packages/paper": {
      "project": [
        "src/**/*.{ts,vue}",
        "!src/**/*.test.ts",
        "!src/**/*.spec.ts"
      ],
      "ignore": [
        "src/**/helpers.ts"
      ],
      "ignoreDependencies": [
        "sass"
      ]
    },
    "playground": {
      "entry": [
        "src/main.ts"
      ],
      "project": [
        "**/*.{js,ts,vue}",
        "src/composables.d.ts",
        "src/components.d.ts"
      ],
      "ignore": [
        "src/Playground.template.vue"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ],
        "@vuetify/v0": [
          "../packages/0/src"
        ],
        "@vuetify/paper": [
          "../packages/paper/src"
        ],
        "#v0": [
          "../packages/0/src"
        ],
        "#paper": [
          "../packages/paper/src"
        ]
      }
    }
  },
  "ignore": [
    "**/*.d.ts",
    "**/dist/**",
    "**/node_modules/**",
    "**/.nuxt/**",
    "**/.output/**",
    "pnpm-lock.yaml"
  ],
  "ignoreDependencies": [
    "@js-temporal/polyfill",
    "@vuetify/paper",
    "@vuetify/v0",
    "conventional-changelog-vuetify",
    "flagsmith",
    "launchdarkly-js-client-sdk",
    "posthog-js"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "ignoreBinaries": [
    "http-server"
  ]
}
