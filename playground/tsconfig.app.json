{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@vuetify/v0": [
        "../packages/v0/src",
      ],
      "@vuetify/paper": [
        "../packages/paper/src",
      ],
      "@vuetify/v0/*": [
        "../packages/v0/src/*",
      ],
      "@vuetify/paper/*": [
        "../packages/paper/src/*",
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "target": "esnext",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "../packages/paper/tsconfig.app.json"
    }
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}